  <body>    
    <div class="wrapper">
      <div class="cont">
        <%- include("parts/header.ejs" ,{isAuth : isAuth}) %>
        <div class="container">
          <% for(var i=0; i<Quests.length;i++) {%>
            <a href="/question/<%= Quests[i]._id %>">
              <div class="questions">
                <div class="answers">
                  <div class="score">
                    <%=Quests[i].answers.length%>
                  </div>
                  <div class="word">
                    <% if(Quests[i].answers.length == 1) {%>
                      ответ
                    <% }else if(Quests[i].answers.length == 2 || Quests[i].answers.length == 3 || Quests[i].answers.length == 4){%>
                      ответa
                    <%}else{%>
                      ответов
                    <%}%>
                  </div>
                </div>
                <div  class="question-info">
                  <div class="title">
                    <h4><%=Quests[i].title%></h4>
                  </div>
                  <p>
                    <% for(let j=0; j < Quests[i].tags.length; ++j) {%>
                      <div class="tag">
                      <%= Quests[i].tags[j] %>
                      </div>
                    <%}%>
                  </p>                      
                </div>
              </div>
            </a>
            <div class="line"></div>
          <%} %>
        </div>
      </div>
      <%- include("parts/footer.ejs") %>
    </div>    


