<!doctype html>
<html lang="ru">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <title>Matvop</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Матвоп</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Link</a>
            </li>
          </ul>
          <form class="form-inline my-5 my-lg-0 ml-2 mr-4">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
          <ul class="navbar-nav mr-sm-4">
            <li class="nav-item" >
                <a class="nav-link" href="/logout">Выйти</a>
            </li>
          </ul>
        </div>
      </nav>
      <br/>
      <div class="container">
        <div class="container" id = "question">
            <h4><div class="title"><%= data.Question.title %></div></h4>
            <div class="desription"><%= data.Question.description %></div>
            <br/>
        </div>
        <div class="container" id = "answers">
            <% for(var i=0; i<data.Ans.length;i++) {%>
                <h4><div class="title"><%= data.Ans[i].answer %></div></h4>
                <form method="post" action="/upscore=<%= data.Ans[i].id %>">
                  <button type="submit">&and;</button>
                </form>
                <div class="score"><%= data.Ans[i].score %></div>
                <form method="post" action="/downscore=<%= data.Ans[i].id %>">
                  <button type="submit">&or;</button>
                </form>
                <br/>
            <%} %>
        </div>
        <div class="container" id = "answer">
            <form method="post" action="/answer=<%= data.Question._id %>">
              <h4><label for="exampleInputTitle1">Ваш ответ:</label></h4>
              <div class="form-group">
                <textarea rows="10" class="form-control" name="description" required></textarea>
              </div>
              <button type="submit" class="btn btn-primary">Ответить</button>
            </form>
        </div>
      </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>