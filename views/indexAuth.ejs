  <body>
    <div class="wrapper">
      <div class="cont">
        <nav>
          <div class="logo">
            <a href="/">Матвоп<sub>α</sub></a>
          </div>
          <div class="navigation">
            <ul class="navbar">
              <li>
                <a href="/">Главная</a>
              </li>
              <li class="search">
                <form action="/findQuestion" method="POST">
                  <input type="text" name="text" placeholder="Искать здесь...">
                  <button type="submit"></button>
                </form>
              </li>
              <li>
                <a href="/ask">Задать вопроc</a>
              </li>
              <li>
                <a href="#" class="user-profile" onclick="document.getElementById('profile').style.display='block'"></a>
              </li>
            </ul>
          </div>
        </nav>
        <div id="profile" class="modal">
          <div class="modal-content animate">
            <ul class="submenu">
              <li>
                <a href="/user/<%=user%>">Профиль</a>
              </li>
              <li>
                <a>Помощь</a>
              </li>
              <li>
                <a href="/logout">Выйти</a>
              </li>
            </ul>
          </div>
        </div>
        <div class="container  my-5 my-lg-2 ml-6 mr-6">
          <br/>
          <div class="container">
            <% for(var i=0; i<Quests.length;i++) {%>
              <a href="/question/<%= Quests[i]._id %>">
                <div class="questions">
                  <div class="answers">
                    <div class="score">
                      <%=Quests[i].answers.length%>
                    </div>
                    <div class="word">
                      <% if(Quests[i].answers.length == 1) {%>
                        ответ
                      <% }else if(Quests[i].answers.length == 2 || Quests[i].answers.length == 3 || Quests[i].answers.length == 4){%>
                        ответa
                      <%}else{%>
                        ответов
                      <%}%>
                    </div>
                  </div>
                  <div  class="question-info">
                    <div class="title">
                      <h4><%=Quests[i].title%></h4>
                    </div>
                    <!-- <div class="desription">
                      <%=Quests[i].description%>
                    </div> -->
                    <p>
                      <% for(let j=0; j < Quests[i].tags.length; ++j) {%>
                        <div class="tag">
                        <%= Quests[i].tags[j] %>
                        </div>
                      <%}%>
                    </p>                             
                  </div>
                </div>
              </a>
              <div class="line"></div>
            <%} %>
          </div>
        </div>
      </div>
